<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CommonDividerTheme">
        <item name="android:background">@color/common_driver_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/action_sheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/action_sheet_dialog_out</item>
    </style>

    <style name="TimePickerWheelTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintHorizontal_chainStyle">spread</item>
        <item name="layout_constraintTop_toBottomOf">@+id/driver</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>
</resources>
